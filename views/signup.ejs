<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup</title>
  <link rel="stylesheet" href="/index.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tw-elements/dist/css/index.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          },
        }
      }
    }
  </script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>  
  <div class="flex flex-col h-screen bg-blue-500">
    <div class="py-0">
      <%-  include('../views/navbar.ejs', {signup: true, loggedIn: false}); %>
    </div>
    <div class="flex justify-center items-center flex-grow">
 
   
   <div class="content-center px-4 py-6 bg-white rounded-3xl shadow-2xl shadow-indigo-600">
   <div class="min-h-full flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-0 ">
      <div>
        <!-- <img class="mx-auto h-12 w-auto" src="" alt=""> -->
        <% if (typeof error != "undefined") { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Signup Failed!</strong>
          <span class="block sm:inline"><%= error.msg %></span>
        </div>
        <% } %>
        <h2 class="text-center text-3xl font-extrabold text-gray-900">Create a qOverflow account</h2>
        <h2 id="msg" class="text-center text-xl font-semibold text-white transition-all delay-500 duration-1000 ease-in-out">A small website where you'll be able to engage with the community
        </h2>
      </div>
      <form class="mt-8 space-y-6" action="#" method="POST">
        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="1" class="sr-only">Username</label>
            <input id="1" name="username" type="text" required class="font-semibold transition-all delay-75 duration-300 ease-in-out appearance-none rounded-none relative block w-full px-3 py-2 border-b-2 border-gray-500 placeholder-gray-500 text-gray-900 outline-none focus:border-indigo-300 focus:z-10 sm:text-sm" placeholder="Username">
          </div>
          <div>
            <label for="1" class="sr-only">Email</label>
            <input id="1" name="email" type="email" required  class="font-semibold mt-4 transition-all delay-75 duration-300 ease-in-out appearance-none rounded-none relative block w-full px-3 py-2 border-b-2 border-gray-500 placeholder-gray-500 text-gray-900 outline-none focus:border-indigo-300 focus:z-10 sm:text-sm" placeholder="Email">
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input id="password" name="password" type="password" autocomplete="current-password" required  class="font-semibold mt-4 transition-all delay-75 duration-300 ease-in-out appearance-none rounded-none relative block w-full px-3 py-2 border-b-2 border-gray-500 placeholder-gray-500 text-gray-900 outline-none focus:border-indigo-300 focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>
  
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
            <label for="remember-me" class="ml-2 block text-sm text-gray-900"> Remember me </label>
          </div>
  
          <div class="text-sm">
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password? </a>
          </div>
        </div>
  
        <div>
          <button data-bs-toggle="modal" type="button" data-bs-target="#staticBackdrop" id="submission" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Sign up
          </button>
        </div>
      </form>
      <div id="response">

      </div>
      
    </div>
  </div>
</div>
</div>
</div>
  <!-- Modal -->
  <div class="modal fade fixed top-0 left-0 hidden w-full h-full outline-none overflow-x-hidden overflow-y-auto"
    id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog relative w-auto pointer-events-none">
      <div
        class="modal-content border-none shadow-lg relative flex flex-col w-full pointer-events-auto bg-white bg-clip-padding rounded-md outline-none text-current">
        <div
          class="modal-header flex flex-shrink-0 items-center justify-between p-4 border-b border-gray-200 rounded-t-md">
          <h5 class="ml-4 text-2xl font-medium leading-normal text-gray-800" id="exampleModalLabel">
            ReCaptcha Check
          </h5>
          <button type="button"
            class="btn-close box-content w-4 h-4 p-1 text-black border-none rounded-none opacity-50 focus:shadow-none focus:outline-none focus:opacity-100 hover:text-black hover:opacity-75 hover:no-underline"
            data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body relative py-4 px-8">
          <p class="text-2xl text-gray-700 font-semibold">
            We aren't done yet....
          </p>
          <p class="mt-2 text-3xl text-gray-700 font-bold underline underline-offset-2 decoration-4 decoration-gray-200">
            Please finish this small test
          </p>
          <p id="question" class="mt-4 text-2xl text-gray-700 font-semibold">
            
          </p>
          <div>
            <p class="mt-2 text-xl text-gray-700 font-semibold pb-1">Your Answer</p>
            <input id="answer" type="text" required class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>
        <div
          class="modal-footer flex flex-shrink-0 flex-wrap items-center justify-end p-4 border-t border-gray-200 rounded-b-md">
          <button type="button"
          class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out ml-1"
            data-bs-dismiss="modal" onclick="allowSubmission()">Check</button>
        </div>
      </div>
    </div>
  </div>
<script>

  onLoadAnim = (elemId, remove, add) => {
      let text = document.getElementById(elemId)
      text.classList.remove(remove)
      text.classList.add(add)
  } 
  onLoadAnim("msg", "text-white", "text-slate-400")


  function random(min, max) {
    let scaler = Math.random()
    let amt = scaler * (max-min)
    let resultant = Math.floor(min + amt)
    return resultant
  }
  let mathQuestions = [
    ["3x+12=0 \n x=?", -4],
    ["5x+5=-5 \n x=?", -2],
    ["11x-11=0 \n x=?", 1],
    ["(x-3)^2=0 \n x=?", 3],
    ["x=2 \n x+y=5 \n y=?", 3]
]
let questionIndex = random(0,mathQuestions.length-1)
console.log(questionIndex)
document.getElementById("question").innerText = mathQuestions[questionIndex][0]
  function allowSubmission() {
    let response = document.getElementById("response")
    let answer = parseInt(document.getElementById("answer").value)
    console.log("User Answer: " + answer)
    let answerCorrect = (answer == mathQuestions[questionIndex][1])
    console.log("Correct? " + answerCorrect)
    if(answerCorrect) {
      response.innerHTML = `
          <p class="mt-4 text-lg text-green-500 font-bold underline underline-offset-2 decoration-2 decoration-green-700">
            Success!
          </p>`
        document.getElementById("submission").setAttribute("type", "submit")
        document.getElementById("submission").removeAttribute("data-bs-toggle")
        document.getElementById("submission").removeAttribute("data-bs-target")
    } else if(!answerCorrect) {
      response.innerHTML = `
          <p class="mt-4 text-lg text-rose-500 font-bold underline underline-offset-2 decoration-2 decoration-rose-700">
            Oops that was the wrong answer
          </p>`
    }
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
</body>
</html>