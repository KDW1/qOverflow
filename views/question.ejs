<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Question</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-200">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <div class="m-5 bg-white shadow-md rounded-lg hover:shadow-xl text-4xl">
        <div class="m-4">
            <h1 class="p-3 text-center text-3xl font-extrabold md:text-5xl">Create a question</h1>
        </div>
        <div class="m-5">
            <form>
                <div class="flex">
                    <div class="flex-1 items-center pb-6">
                        <div class="flex flex-wrap mb-10 space-x-4 place-content-center mb-15">
                            <label class="text-2xl font-bold block">Title:</label>
                            <input maxlength="150" type="text" id="text"
                                class="text-xl outline-black rounded outline outline-4 text-center font-bold block h-10 w-full md:h-12 md:w-96" />
                        </div>
                        <div class="flex flex-wrap mb-10 space-x-4 place-content-center">
                            <label class="text-2xl font-bold">Sub-Title:</label>
                            <input maxlength="3000"
                                class="text-2xl outline-black rounded outline outline-4 text-center font-bold block h-10 w-full md:h-12 md:w-96">
                        </div>
                        <div class="flex-none md:flex md:grid md:grid-cols-2 md:divide-x-0">
                            <div class="flex flex-wrap mb-10 space-x-4 left-0 m-3">
                                <label class="text-2xl font-bold">Content:</label>
                                <textarea id="codemark"
                                    class="m-2 p-3 text-2xl outline-black rounded outline outline-4 text-center font-bold block h-48 w-full md:h-80 md:w-full"></textarea>
                            </div>
                            <div class="flex flex-wrap mb-10 space-x-4 right-0 m-3">
                                <label class="text-2xl font-bold">View:</label>
                                <textarea id="viewer"
                                    class="m-2 p-3 text-2xl outline-black rounded outline outline-4 text-center font-bold block h-48 w-full md:h-80 md:w-full"></textarea>
                            </div>
                            <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
                            <script>
                                ghf = document.getElementById('codemark').innerHTML
                                document.getElementById('viewer').innerHTML =
                                    marked.parse(ghf);
                                $("#viewer").load(location.href + " #viewer");
                            </script>
                        </div>
                        <div class="flex flex-wrap mb-10 space-x-4 place-content-center">
                            <label class="text-2xl font-bold">Send To:</label>
                            <textarea
                                class="p-3 text-2xl  outline-black rounded outline outline-4 text-center font-bold block h-16 w-full md:h-20 md:w-96"></textarea>
                        </div>
                    </div>
            </form>
        </div class="">
    </div>
    <script>
        $(document).ready(function () {
            $("#text150").keypress(function (e) {
                var length = this.value.length;
                if (length >= 15) {
                    e.preventDefault();
                    alert("More than 150 characters not allowed in the Title");
                }
            });

        });
        $(document).ready(function () {
            $("#text3000").keypress(function (e) {
                var length = this.value.length;
                if (length >= 3000) {
                    e.preventDefault();
                    alert("More than 3000 characters not allowed in the Body");
                }
            });

        });
    </script>
</body>

</html>