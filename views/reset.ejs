<!-- reset -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password</title>
  <link rel="stylesheet" href="/index.css">
</head>
<script src="https://cdn.tailwindcss.com"></script>

<body class="bg-blue-500 ">  
  <style>
    .bg-white {
      background-color: rgb(34, 34, 34);
    }
    .bg-gray-50 {
      background-color: rgb(51, 51, 51);
    }
    .bg-gray-200 {
      background-color: rgb(66, 66, 66);
    }
    .bg-green-200 {
      background-color: rgb(70, 167, 135);
    }
    .bg-blue-500 {
      background-color: rgb(11, 13, 18);
    }
    .text-black {
      color: rgb(255, 255, 255);
    }
    .text-gray-700 {
      color: rgb(224, 224, 224);
    }
    .text-gray-900 {
      color: rgb(224, 224, 224);
    }
  </style>
  <div class="flex flex-col bg-blue-500 ">
    <div class="py-0">
      <%-  include('../views/navbar.ejs', {loggedIn: false, login: true}); %>
    </div>
    <div class="flex justify-center items-center flex-grow">
      <% if (typeof error != "undefined") { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold"> Failed!</strong>
          <span class="block sm:inline"><%= error.msg %></span>
        </div>
        <% } else { %>
   
   <div style="transform: translate(0, 50%);" class="content-center py-9 rounded-3xl bg-white">
   <div class="min-h-full flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-0 ">
      <div>
        <!-- <img class="mx-auto h-12 w-auto" src="" alt=""> -->
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Reset your password - <%= username %></h2>
      </div>
      <form class="mt-8 space-y-6" action="#" method="POST">
        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            
            <label for="password" class="block text-sm font-medium leading-5 text-gray-700">
              Password
            </label>
            <div class="mt-1 rounded-md shadow-sm">
              <input id="password" type="password" name="password" class="form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" required>
              <label id="passwordLabel" style="color: red;" for="password"></label>
              <!-- password strength -->
              <script>
                document.getElementById("password").oninput = () => {
                  var value = document.getElementById("password").value;
                  if(value.length == 0) {
                    document.getElementById("passwordLabel").innerHTML = "";
                  } 
                  else if(value.length <= 10) {
                    document.getElementById("passwordLabel").innerHTML = "Weak Password";
                    // red color
                    document.getElementById("passwordLabel").style.color = "red";
                  } else if(value.length <= 17) {
                    document.getElementById("passwordLabel").innerHTML = "Moderate Password";
                    // yellow color
                    document.getElementById("passwordLabel").style.color = "orange";
                  } else {
                    document.getElementById("passwordLabel").innerHTML = "Strong Password";
                    // green color
                    document.getElementById("passwordLabel").style.color = "green";
                  }
                }
              </script>
            </div>
          </div>
        </div>
  
        <div>
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
           Reset
          </button>
          <script>
            // const search2 = document.querySelector('#search2');
            // search2.classList.remove('fixed');
        </script>
        </div>
      </form>
    </div>
  </div>
  <% } %>
</div>
</div>
</body>
</html>