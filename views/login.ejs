<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/index.css">
</head>
<script src="https://cdn.tailwindcss.com"></script>

<body>  
  <div class="flex flex-col h-screen">
    <div class="py-0">
      <%-  include('../views/navbar.ejs', {loggedIn: false, login: true}); %>
    </div>
    <div class="flex justify-center items-center flex-grow">
      <% if (typeof error != "undefined") { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" id="errAlert" role="alert">
          <strong class="font-bold">Login Failed!</strong>
          <span class="block sm:inline"><%= error.msg %></span>
          
          <br/>
          <span class="block sm:inline" id="attemptsLeft"></span>

        </div>
        <% } else { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative hidden" id="errAlert" role="alert">
            <strong class="font-bold">Error!</strong>
    
            
            <br/>
            <span class="block sm:inline" id="attemptsLeft"></span>
  
          </div>
          <% } %>
        <% if (typeof success != "undefined") { %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold"><%= success.msg %> </strong>
          </div>
          <% } %>
   <div class="content-center " id="login">
   <div class="min-h-full flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-0 ">
      <div>
        <!-- <img class="mx-auto h-12 w-auto" src="" alt=""> -->
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Sign in to qOverflow</h2>
      </div>
      <form class="mt-8 space-y-6" action="/auth/login" method="POST">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="1" class="sr-only">Username</label>
            <input id="1" name="username" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Username">
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>
  
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember" name="remember" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
            <label for="remember" class="ml-2 block text-sm text-gray-900"> Remember me </label>
          </div>
  
          <div class="text-sm">
            <a href="/forgot" class="font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password? </a>
          </div>
        </div>
  
        <div>
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Sign in
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
  <script>
    function localStorageKeyExists(key) {
      return localStorage.getItem(key) !== null;
    }
    if(!localStorageKeyExists("attemptsLeft")) localStorage.setItem("attemptsLeft", 3);
    <% if(typeof badPassword != "undefined") { %>
 
      localStorage.setItem("attemptsLeft", Number(localStorage.getItem("attemptsLeft")) - 1);
      
      document.getElementById("attemptsLeft").innerHTML = "You have " + localStorage.getItem("attemptsLeft") + " attempts left.";

      localStorage.setItem("lastAttempt", Date.now()+3600000);

      <% } %>
      function msToTime(duration) {
  const portions = [];
    const msInDay = 1000 * 60 * 60 * 24;
  const days = Math.trunc(duration / msInDay);
  if (days > 0) {
    portions.push(days + 'd');
    duration = duration - (days * msInDay);
  }

  const msInHour = 1000 * 60 * 60;
  const hours = Math.trunc(duration / msInHour);
  if (hours > 0) {
    portions.push(hours + 'h');
    duration = duration - (hours * msInHour);
  }

  const msInMinute = 1000 * 60;
  const minutes = Math.trunc(duration / msInMinute);
  if (minutes > 0) {
    portions.push(minutes + 'm');
    duration = duration - (minutes * msInMinute);
  }

  const seconds = Math.trunc(duration / 1000);
  if (seconds > 0) {
    portions.push(seconds + 's');
  }

  return portions.join(' ')?? "soon" ;
}
      if(localStorage.getItem("attemptsLeft") <= 0 && Date.now() < Number(localStorage.getItem("lastAttempt"))) {
        document.getElementById("login").remove();
        document.getElementById("attemptsLeft").innerHTML = "You have no attempts left.<br>Try again in "+msToTime(Number(localStorage.getItem("lastAttempt")) - Date.now());
        document.getElementById("errAlert").classList.remove("hidden");
      } else if(localStorage.getItem("attemptsLeft") <= 0 ) {
        localStorage.setItem("attemptsLeft", 3);
      }
  </script>
  </body>
</html>